{
    "name": "TabsFixer",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Keep the position of tabs like 'Web', 'Images', 'Shopping', etc. in Google search results consistently fixed.",
    "action": {
        "default_popup": "popup/settings.html"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/*",
                "https://www.google.co.jp/*"
            ],
            "js": [
                "js/utils.js",
                "js/script.js"
            ],
            "css": [
                "css/style.css"
            ]
        }
    ]
}